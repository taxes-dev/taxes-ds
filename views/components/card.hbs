{{#if imageOnRight}}
<div class="txs--card -image-on-right">
{{else}}
<div class="txs--card">
{{/if}}
    {{#if image}}
    <div class="txs--card_image">
        <img class="txs--card_image_img" src="{{image}}" alt="{{header}}">
    </div>
    {{/if}}
    <div class="txs--card_text">
        {{#if header}}
        <h4 class="txs--card_text_header">{{header}}</h4>
        {{/if}}
        <p class="txs--card_text_desc">{{> @partial-block }}</p>
        {{#if links}}
        <ul class="txs--card_text_links">
            {{#each links}}
            <li class="txs--card_text_links_item">
                {{#if newTab}}
                <a href="{{url}}" target="_blank">{{text}}</a>
                {{else}}
                <a href="{{url}}">{{text}}</a>
                {{/if}}
            </li>
            {{/each}}
        </ul>
        {{/if}}
    </div>
</div>